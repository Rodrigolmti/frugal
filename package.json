{
  "name": "grocery-price-comparison",
  "version": "1.0.0",
  "description": "Compare grocery prices across multiple stores",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "install:all": "npm install && cd client && npm install",
    "clean": "rm -rf node_modules client/node_modules && npm run install:all",
    "test:api": "curl -s http://localhost:3001/api/stores | jq .",
    "lint": "cd client && npm run lint"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "puppeteer": "^24.22.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "grocery",
    "price-comparison",
    "web-scraping"
  ],
  "author": "",
  "license": "MIT"
}
